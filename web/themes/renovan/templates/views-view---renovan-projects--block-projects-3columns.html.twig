{% if rows %}
    <section class="projects">
        {% if header %}
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        {{ header }}
                    </div>
                </div>
            </div>
        {% endif %}    
        <div class="content">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <div class="grid">
                            {% for row in rows %}
                                {{ row }}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            {% if pager %}
                <div class="pagination">
                    {{ pager }}
                </div>
            {% endif %}

        </div>
    </section>

{% endif %}
