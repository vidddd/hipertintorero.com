
{% set sidebar = projects_sidebar %}

{% if sidebar==''%}
{% set sidebar='right'%}
{% endif %}
    
{% include theme_path ~ "/templates/header.html.twig" %}
{% include theme_path ~ "/templates/page-title.html.twig" %}
{% if sidebar == 'left'%}
<div  class="page-projects-sidebar">
    <div class="site-content">
        <section class="projects">
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-4">
                            {% if page.sidebar %}
                                {{ page.sidebar }}
                            {% endif%}
                        </div>                        
                        <div class="col-sm-8">
                            <div class="grid">
                                {% if page.content %}
                                    {{ page.content }}
                                {% endif %}
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
{% elseif  sidebar == 'right'%}
<div  class="page-projects-sidebar">
    <div class="site-content">
        <section class="projects">
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="grid">
                                {% if page.content %}
                                    {{ page.content }}
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-sm-4">
                            {% if page.sidebar %}
                                {{ page.sidebar }}
                            {% endif%}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
{% else %}
<div  class="page-projects-basic">
    <div class="site-content">
        <section class="projects projects-basic">
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="grid-basic">                   
                                {% if page.content %}
                                    {{ page.content }}
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
{% endif %}
    {% if page.section %}
        {{ page.section }}
    {% endif %}
{% include theme_path ~ "/templates/footer.html.twig" %}

